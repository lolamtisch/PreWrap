{
    "manifest_version": 3,
    "name": "PreWrap",
    "version": "0.0.1",
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "webNavigation"
    ],
    "optional_host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
