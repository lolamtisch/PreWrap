{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "removeComments": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "newLine": "lf",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "@types"
    ],
    "esModuleInterop": true
  }
}
